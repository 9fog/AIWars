<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 resize="onResize(event)"
		 >
	<fx:Script>
		<![CDATA[
			import mx.events.ResizeEvent;
			
			protected function onResize(event:ResizeEvent):void
			{
				back.width = width;
				back.height = height;
			}
			[Bindable] public var color:int=0xFFFFCC; 
			public function set empty(value:Boolean):void
			{
				if (!value)
					color = 0x000000; 
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Graphic>    
		<s:Rect id="back" width="100%" height="100%" radiusX="3" radiusY="3">
			<s:fill>
				<s:SolidColor color="{color}" alpha="0.3"/>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke color="0xcceecc" weight="1" alpha="0.3"/>
			</s:stroke>
		</s:Rect>
	</s:Graphic>
</s:Group>
